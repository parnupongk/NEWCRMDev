@{   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {

    <script type="text/javascript">
        $(document).ready(function () {

        });

        function beginSave(args) {
            openWarningDialog("Saving...");
        }

        function successSave(ctaID) {
            //openSuccessDialog('Save data completed');            
            window.location = '@Url.Action("Detail", "Contact")/' + ctaID;
        }

        function failureSave(data) {
            openWarningDialog(data.responseText);
        }
    </script>
}
@*<div class="section-header">
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Contact")">Contacts</a></li>
        <li class="active">Add new</li>
