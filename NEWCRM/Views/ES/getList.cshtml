@model IEnumerable<NEWCRM.Models.EngineerSupport>
@if (Model.Count() > 0)
{ 
    <div class="col-lg-12" style="padding: 0 30px 10px 30px;">
        <div class="table-responsive">
            <table id="datatable1" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width:40%">Date Start - End</th>                        
                        <th style="width:25%">Email</th>
                        <th style="width:25%">Phone</th>
                        <th style="width:10%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr class="gradeX">
                        <td>@item.espStart.Value.ToString("dd/MM/yyyy HH:mm") - @item.espEnd.Value.ToString("dd/MM/yyyy HH:mm")</td>                        
                        <td>@item.espEmail</td>
                        <td>@item.espPhone</td>
                        <td>
                            <button type="button" class="btn ink-reaction btn-icon-toggle btn-default" title="Edit.." onclick="espEdit('@item.espID')"><i class="md md-settings fa-fw"></i></button>
                            <button type="button" class="btn ink-reaction btn-icon-toggle btn-default" title="Remove.." onclick="espRemove('@item.espID')"><i class="md md-delete fa-fw"></i></button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>    
}
