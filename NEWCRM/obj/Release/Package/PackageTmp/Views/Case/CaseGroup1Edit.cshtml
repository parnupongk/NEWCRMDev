                {
                    selected = "selected";
                }
                <option @selected value="@item">@item</option>
            }
        </select>

    </div>
    <br/>
    <label class="col-sm-3 control-label">ข้อมูลผู้ถูกร้องเรียน</label>
    <div class="col-sm-9 margin-bottom-xl bg-warning">
        <textarea id="txtVendorID" name="txtVendorID" class="form-control" rows="2" >@Model.cases.casVendorID</textarea>
    </div>
</div>

