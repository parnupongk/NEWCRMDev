            }
        </select>
        <input id="paymentTypeOther" type="text" class="form-control" name="paymentTypeOther" placeholder="ระบุ" value="@ViewBag.paymentType_2" />

    </div>

    <br />
    <label class="col-sm-3 control-label">มูลค่าการซื้อขาย </label>
    <div class="col-sm-9 margin-bottom-xl bg-warning">
        <select id="valueRange" name="valueRange" class="form-control">

            @foreach (var item in Model.valueRange)
            {
                var selected = string.Empty;
