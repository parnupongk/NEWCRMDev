@model IEnumerable<NEWCRM.Models.sp_GetNotification_Result>
@if(Model.Count() > 0) {
<script>ntfList('@Model.Count()')</script> 
    foreach (var item in Model)
    {
        var cssLabel = "alert-warning";
        if (Convert.ToBoolean(item.notRead))
        {
            cssLabel = "alert-success";
        }        
        <li>
            <div class="alert alert-callout @cssLabel">
                <div class="stick-top-right">
                    <a href="javascript:;" onclick="ntfRemove('@item.notID')" class="btn btn-icon-toggle btn-default-light" data-toggle="tooltip" data-placement="top" data-original-title="Remove.."><i class="md md-delete"></i></a>
                </div>
                <a href="@Url.Action("CaseDetail", "Case", new { id = @item.refID })" target="_blank" class="text-warning"><span class="opacity-60">@item.notDesc</span></a>
            </div>
        </li>
    }    
} else {
    <li>&nbsp;&nbsp;Not found</li>
}