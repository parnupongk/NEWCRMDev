@model NEWCRM.Models.ListRepCaseModel

<div class="row">
    <div class="col-lg2" style="padding: 0 30px 10px 30px;"><a href="@Url.Action("excelEndCall", "RepCase", new { startDate = @ViewBag.startDate, endDate = @ViewBag.endDate })"  class="btn ink-reaction btn-success"><i class="fa fa-file-excel-o"></i>&nbsp;Export To Excel</a></div>
</div>
<div class="row">
    <div class="col-lg-12" style="padding: 0 30px 10px 30px;">
        <div class="table-responsive">
            <table width="100%">
                <thead>
                    <tr class="gradeX">
                        <th colspan="2">
                            <h3>ETDA Call Center</h3>
                            <h4>End Call Survey Report</h4>
                        </th>
                        <th colspan="2"></th>
                        <th>
                            <div class="form-group no-padding pull-right">
                                <img width="190px" height="100px" src="http://parnupongk.azurewebsites.net/images/logo.png" />
                            </div>
                        </th>
                    </tr>
                </thead>
            </table>
            <table id="datatable1" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Total Answer</th>
                        <th>Wrong Answer</th>
                        <th>Not Answer</th>
                        <th>จำนวน</th>
                        <th>%</th>
                        <th>จำนวน</th>
                        <th>%</th>
                        <th>จำนวน</th>
                        <th>%</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.list_endcall)
                    {
                        <tr class="gradeX">
                            <td>@item.createDate</td>
                            <td>@item.total_answer</td>
                            <td>@item.score_wrong</td>
                            <td>@item.not_answer</td>
                            <td>@item.score_1</td>
                            <th>@item.per_score_1</th>
                            <td>@item.score_2</td>
                            <th>@item.per_score_2</th>
                            <td>@item.score_3</td>
                            <td>@item.per_score_3</td>
                        </tr>
                    }
                </tbody>

                <tr style="background-color:#2B5D95;color:#ffffff;">
                    <th>Sum </th>
                    <th>@Model.list_endcall.Sum(x => x.total_answer)</th>
                    <th>@Model.list_endcall.Sum(x => x.score_wrong)</th>
                    <th>@Model.list_endcall.Sum(x => x.not_answer)</th>
                    <th>@Model.list_endcall.Sum(x => x.score_1)</th>
                    <th>@ViewBag.per_score_1</th>
                    <th>@Model.list_endcall.Sum(x => x.score_2)</th>
                    <th>@ViewBag.per_score_2</th>
                    <th>@Model.list_endcall.Sum(x => x.score_3)</th>
                    <th>@ViewBag.per_score_3</th>
                </tr>

            </table>
        </div>
    </div>
</div>